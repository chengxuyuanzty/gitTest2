<view class="page">
    <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">宫格</view>
    </view>
    <view class="page__bd">
        <wux-grids>
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
            <wux-grid thumb="http://cdn.skyvow.cn/logo.png" label="Wux Weapp" />
        </wux-grids>
        <wux-popover placement="topLeft" title="标题" content="Content">
                <button size="mini">topLeft</button>
        </wux-popover>
    </view>
    <view class="page__bd">
        <wux-tabs wux-class="bordered" controlled current="{{ key }}" bindchange="onTabsChange">
          <block wx:for="{{ tabs }}" wx:key="key">
              <wux-tab key="{{ item.key }}" title="{{ item.title }}"></wux-tab>
          </block>
        </wux-tabs>
        <swiper current="{{ index }}" bindchange="onSwiperChange" class="textCenter">
            <block wx:for="{{ tabs }}" wx:key="key">
                <swiper-item>
                    <view class="content">{{ item.content }}</view>
                </swiper-item>
            </block>
        </swiper>
    </view>    
</view>